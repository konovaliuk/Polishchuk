<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">


    <servlet>
        <servlet-name>Controller</servlet-name>
        <servlet-class>ua.com.delivery.controller.Controller</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Controller</servlet-name>
        <url-pattern>/polik</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
       <servlet-name>Controller</servlet-name>
       <url-pattern>*.css</url-pattern>
   </servlet-mapping>

    <session-config>
        <session-timeout>
            1
        </session-timeout>
    </session-config>

    <jsp-config>
        <taglib>
            <taglib-uri>/WEB-INF/tags/HelloForName.tld</taglib-uri>
            <taglib-location>/WEB-INF/tags/HelloForName.tld</taglib-location>
        </taglib>
    </jsp-config>

    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>ua.com.delivery.controller.i18n.filter.EncodingFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
    </filter-mapping>

    <filter>
        <filter-name>LocaleFilter</filter-name>
        <filter-class>ua.com.delivery.controller.i18n.filter.LocaleFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>LocaleFilter</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
    </filter-mapping>
    <filter>
        <filter-name>requestFilterEncoding</filter-name>
        <filter-class>ua.com.delivery.controller.filters.FilterForEncoding</filter-class>
        <init-param>
            <param-name>active</param-name>
            <param-value>true</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>requestFilterEncoding</filter-name>
        <servlet-name>Controller</servlet-name>
    </filter-mapping>
</web-app>